load("//bazel:gml_build_system.bzl", "gml_cc_library", "gml_cc_test")

package(default_visibility = ["//src:__subpackages__"])

gml_cc_library(
    name = "cc_library",
    srcs = glob(
        ["*.cc"],
        exclude = [
            "*_test.cc",
        ],
    ),
    hdrs = glob(["*.h"]),
    deps = [
        "//bazel/external:libuv",
        "//bazel/external:natsc",
    ],
)

gml_cc_test(
    name = "libuv_dispatcher_test",
    srcs = ["libuv_dispatcher_test.cc"],
    tags = ["no_tsan"],
    deps = [":cc_library"],
)
