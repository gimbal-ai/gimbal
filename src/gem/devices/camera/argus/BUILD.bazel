load("//bazel:gml_build_system.bzl", "gml_cc_binary")
load("//bazel:images.bzl", "gml_jetson_image")
load("//src/gem/plugins:plugins.bzl", "gem_plugin_cc_library")

package(default_visibility = [
    "//src/experimental:__subpackages__",
    "//src/gem:__subpackages__",
])

gem_plugin_cc_library(
    name = "cc_library",
    srcs = [
        "argus_cam.cc",
        "nvbufsurfwrapper.cc",
    ],
    hdrs = [
        "argus_cam.h",
        "nvbufsurfwrapper.h",
    ],
    linkopts = [
        "-lnvbufsurface",
        "-lnvargus",
    ],
    plugin_name = "argus",
)

gml_cc_binary(
    name = "argus_cam_binary",
    srcs = ["argus_cam_binary.cc"],
    linkopts = [
        "-lX11",
        "-ldl",
        "-lunwind",
    ],
    deps = [
        ":cc_library",
        "@com_github_opencv_opencv//:opencv",
    ],
)

gml_jetson_image(
    name = "argus_cam_binary_image",
    binary = ":argus_cam_binary",
)
