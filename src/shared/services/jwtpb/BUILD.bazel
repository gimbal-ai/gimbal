load("@build_stack_rules_proto//rules:proto_compile.bzl", "proto_compile")
load("@build_stack_rules_proto//rules/cc:proto_cc_library.bzl", "proto_cc_library")
load("@build_stack_rules_proto//rules/go:proto_go_library.bzl", "proto_go_library")
load("@rules_proto//proto:defs.bzl", "proto_library")

proto_library(
    name = "jwtpb_proto",
    srcs = ["jwt.proto"],
    visibility = ["//visibility:public"],
    deps = ["@com_github_gogo_protobuf_proto//gogoproto:gogo_proto"],
)

proto_cc_library(
    name = "jwtpb_cc_library",
    srcs = ["jwt.pb.cc"],
    hdrs = ["jwt.pb.h"],
    visibility = ["//visibility:public"],
    deps = [
        "@com_github_gogo_protobuf_proto//gogoproto:gogo_cc_library",
        "@com_google_protobuf//:protobuf",
    ],
)

proto_compile(
    name = "jwtpb_cpp_compile",
    outputs = [
        "jwt.pb.cc",
        "jwt.pb.h",
    ],
    plugins = ["@build_stack_rules_proto//plugin/builtin:cpp"],
    proto = "jwtpb_proto",
    visibility = ["//visibility:public"],
)

proto_compile(
    name = "jwtpb_go_compile",
    output_mappings = ["jwt.pb.go=gimletlabs.ai/gimlet/src/shared/services/jwtpb/jwt.pb.go"],
    outputs = ["jwt.pb.go"],
    plugins = ["@build_stack_rules_proto//plugin/gogo/protobuf:protoc-gen-gogoslick"],
    proto = "jwtpb_proto",
    visibility = ["//visibility:public"],
)

proto_go_library(
    name = "jwtpb_go_proto",
    srcs = ["jwt.pb.go"],
    importpath = "gimletlabs.ai/gimlet/src/shared/services/jwtpb",
    visibility = ["//visibility:public"],
    deps = [
        "@com_github_gogo_protobuf//proto",
        "@com_github_gogo_protobuf//protoc-gen-gogo/descriptor",
        "@com_github_gogo_protobuf//types",
        "@com_github_gogo_protobuf_proto//gogoproto:gogo_go_proto",
        "@org_golang_google_grpc//:go_default_library",
        "@org_golang_google_grpc//codes",
        "@org_golang_google_grpc//status",
    ],
)
