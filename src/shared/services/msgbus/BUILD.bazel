    name = "msgbus_test",
    timeout = "short",
    srcs = ["jetstream_test.go"],
    deps = [
        ":msgbus",
        "//src/shared/services/natstest",
        "@com_github_nats_io_nats_go//jetstream",
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//require",
    ],
