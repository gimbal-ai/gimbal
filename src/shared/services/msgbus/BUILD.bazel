go_library(
    name = "msgbus",
    srcs = [
        "jetstream.go",
        "nats.go",
    ],
    importpath = "gimletlabs.ai/gimlet/src/shared/services/msgbus",
    visibility = ["//visibility:public"],
    deps = [
        "@com_github_cenkalti_backoff_v4//:backoff",
