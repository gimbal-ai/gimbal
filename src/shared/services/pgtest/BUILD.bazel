load("@gml//bazel:gml_build_system.bzl", "gml_go_test")
load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "pgtest",
    srcs = ["pgtest.go"],
    importpath = "gimletlabs.ai/gimlet/src/shared/services/pgtest",
    visibility = ["//visibility:public"],
    deps = [
        "//src/shared/services/pg",
        "@com_github_golang_migrate_migrate_v4//:migrate",
        "@com_github_golang_migrate_migrate_v4//database/postgres",
        "@com_github_golang_migrate_migrate_v4//source/iofs",
        "@com_github_jmoiron_sqlx//:sqlx",
        "@com_github_ory_dockertest_v3//:dockertest",
        "@com_github_ory_dockertest_v3//docker",
        "@com_github_sirupsen_logrus//:logrus",
        "@com_github_spf13_viper//:viper",
    ],
)

gml_go_test(
    name = "pgtest_test",
    srcs = ["pgtest_test.go"],
    deps = [
        ":pgtest",
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//require",
    ],
)
